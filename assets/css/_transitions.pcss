/***
Crazy Transition
***/
.crazy-enter-active, .crazy-leave-active {
  transition-duration: 1600ms;

  &::before,
  &::after {
    content: "";
    position: fixed;
    top: 0;
    left: 0;
    z-index: 2;
    display: block;
    width: 100%;
    height: 100%;
    transition-property: opacity, transform;
    transition-timing-function: cubic-bezier(0.87, 0, 0.13, 1);
  }

  &::before {
    background-color: #000;
  }

  &::after {
    top: 50%;
    background-color: #2e2e2e;
  }
}

.crazy-leave {
  &::before,
  &::after {
    transform: scaleX(0);
  }
}

.crazy-leave-active {
  &::before {
    transition-duration: 800ms;
  }

  &::after {
    transition-duration: 500ms;
    transition-delay: 300ms;
  }
}

.crazy-leave-to {
  &::before,
  &::after {
    transform: scale(1);
    transform-origin: left;
  }
}

.crazy-enter {
  &::before,
  &::after {
    transform: scaleX(1);
  }
}

.crazy-enter-active {
  &::before {
    transition-duration: 800ms;
  }

  &::after {
    transition-duration: 500ms;
    transition-delay: 300ms;
  }
}

.crazy-enter-to {
  &::before,
  &::after {
    transform: scaleX(0);
    transform-origin: right;
  }
}